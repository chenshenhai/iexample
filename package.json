{
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "init": "pnpm i",
    "dev:mod": "vite-node ./scripts/dev-mod.ts",
    "dev": "vite-node ./scripts/dev.ts",
    "dev:front": "vite-node ./scripts/dev-front.ts",
    "dev:server": "vite-node ./packages/iexample/src/server/index.ts",
    "_dev:server": "ts-node  --project ./tsconfig.node.json ./packages/iexample/src/server/index.ts",
    "build": "npm run build:mod && npm run build:front && npm run build:node",
    "build:mod": "npm run build:type && vite-node ./scripts/build-module.ts",
    "_build:mod": "npm run build:type && ts-node ./scripts/build-module.ts",
    "build:type": "vue-tsc -p tsconfig.build.json",
    "build:front": "vite-node ./scripts/build-front.ts",
    "build:node": "vite-node ./scripts/build-node.ts",
    "version": "vite-node ./scripts/version.ts",
    "release": "vite-node ./scripts/release.ts",
    "clear": "rm -rf ./node_modules && rm -rf ./pnpm-lock.yaml && rm -rf ./packages/*/dist/ && rm -rf ./packages/*/node_modules/ && rm -rf ./packages/*/pnpm-lock.yaml",
    "lint": "eslint ./packages/*/src/ --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts  --fix  --ignore-path .gitignore"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "@microsoft/api-extractor": "^7.28.4",
    "@rollup/plugin-inject": "^4.0.4",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rushstack/eslint-patch": "^1.1.4",
    "@tsconfig/node18": "^1.0.1",
    "@types/glob": "^7.2.0",
    "@types/node": "^18.0.5",
    "@vitejs/plugin-vue": "^3.0.0",
    "@vitejs/plugin-vue-jsx": "^2.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/tsconfig": "^0.1.3",
    "buffer": "^6.0.3",
    "chalk": "^5.0.1",
    "enquirer": "^2.3.6",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.2.0",
    "execa": "^6.1.0",
    "glob": "^8.0.3",
    "less": "^4.1.3",
    "minimist": "^1.2.6",
    "prettier": "^2.7.1",
    "rollup-plugin-polyfill-node": "^0.10.1",
    "semver": "^7.3.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.0",
    "vite-node": "^0.18.0",
    "vue": "^3.2.37",
    "vue-tsc": "^0.38.5"
  }
}
